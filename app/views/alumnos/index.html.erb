 <!-- La variable declarada en el controlador ahora la veremos en la vista -->
<b>Bienvenido:</b> <%= @user %><br />
<div id="cuerpo">
  <p id="notice"><%= notice %></p>
  <h1>Lista de Alumnos</h1>
  <table border="1px" cellpadding="5px">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cedula</th>
        <th>Correo</th>
        <th>Telefono</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @alumnos.each do |alumno| %>
        <tr>
          <td><%= alumno.nombre %></td>
          <td><%= alumno.apellido %></td>
          <td><%= alumno.cedula %></td>
          <td><%= alumno.correo %></td>
          <td><%= alumno.telefono %></td>
          <td><%= link_to 'Mostrar', alumno %></td>
          <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
          <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Registrar Alumno', new_alumno_path %>
</div>